<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        title="Add Filter"
        contentWidth="400px"
        draggable="true">
        <content>
            <VBox class="sapUiSmallMargin">
                <Label text="Property" />
                <Select
                    id="idPropertiesSelect"
                    width="100%"
                    items="{dialog>/properties}"
                    selectedKey="{dialog>/selectedProperty}">
                    <items>
                        <core:Item
                            key="{dialog>key}"
                            text="{dialog>text}" />
                    </items>
                </Select>
                <Label text="Operator" />
                <Select
                    id="idOperatorsSelect"
                    width="100%"
                    items="{dialog>/operators}"
                    selectedKey="{dialog>/selectedOperator}">
                    <items>
                        <core:Item
                            key="{dialog>key}"
                            text="{dialog>text}" />
                    </items>
                </Select>
                <Label text="Value" />
                <Input
                    id="idValueInput"
                    width="100%"
                    value="{dialog>/selectedValue}"
                    submit="onConfirm" />
            </VBox>
        </content>
        <buttons>
            <Button
                text="Save"
                type="Emphasized"
                icon="sap-icon://accept"
                press="onConfirm" />
            <Button
                text="Cancel"
                type="Ghost"
                icon="sap-icon://decline"
                press="onCancel" />
        </buttons>
    </Dialog>
</core:FragmentDefinition> 