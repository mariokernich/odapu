<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        title="Add Header"
        contentWidth="400px"
        draggable="true">
        <content>
            <VBox class="sapUiSmallMargin">
                <SegmentedButton
                    width="100%"
                    selectionChange="onHeaderTypeChange"
                    selectedKey="{dialog>/selectedType}"
                    class="sapUiTinyMarginBottom">
                    <items>
                        <SegmentedButtonItem
                            key="custom"
                            text="Custom Header" />
                        <SegmentedButtonItem
                            key="predefined"
                            text="Pre defined" />
                    </items>
                </SegmentedButton>
                <Label text="Key" />
                <Input
                    width="100%"
                    visible="{dialog>/isCustomType}"
                    value="{dialog>/selectedInputKey}"
                    submit="onSubmit" />
                <Select
                    width="100%"
                    visible="{dialog>/isPredefinedType}"
                    items="{dialog>/predefinedHeaders}"
                    selectedKey="{dialog>/selectedKey}">
                    <items>
                        <core:Item
                            key="{dialog>key}"
                            text="{dialog>text}" />
                    </items>
                </Select>
                <Label text="Value" class="sapUiSmallMarginTop" />
                <Input
                    width="100%"
                    value="{dialog>/selectedValue}"
                    submit="onSubmit" />
            </VBox>
        </content>
        <buttons>
            <Button
                text="Save"
                type="Emphasized"
                icon="sap-icon://accept"
                press="onConfirm" />
            <Button
                text="Cancel"
                type="Ghost"
                icon="sap-icon://decline"
                press="onCancel" />
        </buttons>
    </Dialog>
</core:FragmentDefinition> 