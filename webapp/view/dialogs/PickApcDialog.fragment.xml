<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        title="Select Push Channel"
        contentWidth="80%"
        contentHeight="80%">
        <content>
            <Toolbar>
                <SearchField
                    width="100%"
                    placeholder="Search Push Channels"
                    liveChange="onSearch" />
                <ToolbarSpacer />
            </Toolbar>
            <Table
                id="idApcTable"
                mode="SingleSelectMaster"
                growing="true"
                growingThreshold="100"
                items="{dialog>/apc}">
                <columns>
                    <Column>
                        <header>
                            <Label text="Application ID" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Path" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Description" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="protocol_type_id" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="amc_message_type_id" />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{dialog>ApplicationId}" />
                            <Text text="{dialog>Path}" />
                            <Text text="{dialog>Description}" />
                            <Text text="{dialog>ProtocolTypeId}" />
                            <Text text="{dialog>AmcMessageTypeId}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <buttons>
            <Button
                text="Choose"
                type="Emphasized"
                icon="sap-icon://accept"
                press="onChoose" />
            <Button
                text="Cancel"
                type="Ghost"
                icon="sap-icon://decline"
                press="onCancel" />
        </buttons>
    </Dialog>
</core:FragmentDefinition> 