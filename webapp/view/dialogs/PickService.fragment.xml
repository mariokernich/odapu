<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog
		title="Select Service"
		contentWidth="80%"
		contentHeight="80%"
		busyIndicatorDelay="0"
		draggable="true">
		<content>
			<Toolbar class="sapUiResponsivePadding">
				<SearchField
					placeholder="Search Services"
					liveChange="onSearch"
					width="100%"/>
				<ToolbarSpacer/>
				<Select
					items="{
						path: 'dialog>/odataTypes'
					}"
					change="onODataTypeChange"
					width="100px">
					<core:Item key="{dialog>key}" text="{dialog>text}"/>
				</Select>
				<Button
					press="onRefresh"
					type="Ghost"
					tooltip="Refresh Services"
					icon="sap-icon://refresh"/>
			</Toolbar>
			<Table
				items="{
					path: 'services>/'
				}"
				growing="true"
				growingThreshold="9999"
				mode="SingleSelectMaster">
				<columns>
					<Column>
						<header>
							<Label text="Service Name / Group ID"/>
						</header>
					</Column>
					<Column>
						<header>
							<Label text="Service Path"/>
						</header>
					</Column>
					<Column>
						<header>
							<Label text="Description"/>
						</header>
					</Column>
					<Column width="100px">
						<header>
							<Label text="OData Type"/>
						</header>
					</Column>
					<Column width="100px">
						<header>
							<Label text="Version"/>
						</header>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{services>ServiceName}{services>GroupId}"/>
							<Text text="{services>ServicePath}"/>
							<Text text="{services>Description}"/>
							<Text text="{services>ODataType}"/>
							<Text text="{services>Version}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<buttons>
			<Button
				text="Choose"
				press="onChoose"
				type="Emphasized"
				icon="sap-icon://accept"/>
			<Button
				text="Use Custom Service"
				press="onCustomService"
				type="Ghost"
				icon="sap-icon://add-document"/>
			<Button
				text="Cancel"
				press="onCancel"
				type="Ghost"
				icon="sap-icon://decline"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition> 