<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        title="Saved Projects"
        contentWidth="400px"
        contentHeight="600px"
        draggable="true">
        <content>
            <Toolbar>
                <SearchField
                    placeholder="Search Projects"
                    liveChange="onSearch"
                    width="100%" />
                <ToolbarSpacer />
            </Toolbar>
            <Table
                id="idProjectsTable"
                items="{dialog>/projects}"
                mode="SingleSelectMaster"
                growing="true"
                growingThreshold="100"
                noDataText="No projects found">
                <columns>
                    <Column>
                        <Label text="Project Name" />
                    </Column>
                    <Column hAlign="End">
                        <Label text="Actions" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{dialog>ProjectName}" />
                            <HBox justifyContent="End">
                                <Button
                                    icon="sap-icon://delete"
                                    type="Reject"
                                    press="onDelete" />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <buttons>
            <Button
                text="Load"
                type="Emphasized"
                icon="sap-icon://accept"
                press="onLoad" />
            <Button
                text="Cancel"
                type="Ghost"
                icon="sap-icon://decline"
                press="onCancel" />
        </buttons>
    </Dialog>
</core:FragmentDefinition> 