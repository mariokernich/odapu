<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        title="Save Project"
        contentWidth="400px"
        initialFocus="idProjectNameInput"
        draggable="true">
        <content>
            <VBox class="sapUiSmallMargin">
                <Label text="Project Name" />
                <Input
                    id="idProjectNameInput"
                    placeholder="Enter project name..."
                    width="100%"
                    value="{dialog>/projectName}"
                    submit="onSave" />
            </VBox>
        </content>
        <buttons>
            <Button
                text="Save"
                type="Emphasized"
                icon="sap-icon://accept"
                press="onSave" />
            <Button
                text="Cancel"
                type="Ghost"
                icon="sap-icon://decline"
                press="onCancel" />
        </buttons>
    </Dialog>
</core:FragmentDefinition> 